<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true" android:state_pressed="true">
        <bitmap android:gravity="center" android:src="@drawable/joint_btn_voice_open_pressed" />
    </item>
    <item android:state_checked="true">
        <bitmap android:gravity="center" android:src="@drawable/joint_btn_voice_open_normal" />
    </item>
    <item android:state_checked="false" android:state_pressed="true">
        <bitmap android:gravity="center" android:src="@drawable/joint_btn_voice_close_pressed" />
    </item>
    <item>
        <bitmap android:gravity="center" android:src="@drawable/joint_btn_voice_close_normal" />
    </item>
</selector>