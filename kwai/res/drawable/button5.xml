    <item android:state_enabled="false">
        <shape>
            <solid android:color="#ffd4d4d4" />
            <corners android:radius="2.5dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#ff74c1e5" />
            <corners android:radius="2.5dip" />
