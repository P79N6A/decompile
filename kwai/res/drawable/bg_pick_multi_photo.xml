<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape>
            <solid android:color="#ffd4d4d4" />
            <corners android:radius="12.5dip" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#99ff8000" />
                    <corners android:radius="12.5dip" />
                </shape>
            </item>
            <item>
                <shape>
                    <solid android:color="#1a000000" />
                    <corners android:radius="12.5dip" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <shape>
            <solid android:color="@color/record_primary_color" />
            <corners android:radius="12.5dip" />
        </shape>
    </item>
</selector>